<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/css/styles-register.css" rel="stylesheet">
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
        <main class="conteiner">
            <form action="/user/register" id="form" class="myForm" enctype="multipart/form-data" method="post">
                <div class="contact">
                    <article>
                        <h2>Nuevo Usuario</h2>
                        <div >
                            <ul id="ulerrores">
                            </ul>
                        </div>
                    </article>
                    <article>
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" placeholder="Ingrese su nombre" 
                        value="<%= locals.old ? old.name : null %>" >
                        <% if (locals.errors && errors.name) { %>
                            <div class="text-danger">
                                <%= errors.name.msg %>
                            </div>
                        <% } %>
                        <span class="error"></span>
                        <p class="avisoName"></p>
                    </article>
                    <article>
                        <label for="apellido">Apellido</label>
                        <input type="text" id="lastname" name="lastname" placeholder="Ingrese su apellido"
                        value="<%= locals.old ? old.lastname : null %>" >
                        <% if (locals.errors && errors.lastname) { %>
                            <div class="text-danger">
                                <%= errors.lastname.msg %>
                            </div>
                        <% } %>
                        <span class="error"></span>
                        <p class="avisoLastName"></p>
                    </article>
                    <article>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Ingrese su email"
                        value="<%= locals.old ? old.email : null %>" >
                        <% if (locals.errors && errors.email) { %>
                            <div class="text-danger">
                                <%= errors.email.msg %>
                            </div>
                        <% } %>
                        <span class="error"></span>
                    </article>

                    <article>
                        <label for="name">Contraseña</label>
                        <input type="password" id="password" name="password" placeholder="Ingrese su Contraseña" 
                        value="<%= locals.old ? old.password : null %>">
                        <% if(locals.errors && errors.password) { %>
                            <div class="text-danger">
                                <%= errors.password.msg %>
                            </div>
                        <% } %>
                        <span class="error"></span>
                    </article>
                    <article>
                        <legend>Categoría</legend>
                        <select name="type" id="type">
                            <option value="1">Usuario</option>
                            <option value="2">Vendedor</option>
                        </select>
                    </article>
                    <article>
                        <label for="avatar">Avatar</label>
                        <input type="file" name="avatar" value="<%= locals.old ? old.avatar : null %>" id="avatar">
                        <% if(locals.errors && errors.avatar) { %>
                            <div class="text-danger">
                                <%= errors.avatar.msg %>
                            </div>
                        <% } %>
                        <span class="error"></span>
                    </article>
                    
                    <article>
                        <button type="submit" id ="submit">Guardar</button>
                        <button type="reset">Limpiar</button>
                    </article>
                </div>
            </form>
        </main>
        <script src ="/js/validatorRegister.js"></script>
        <%- include('../partials/footer')%>
</body>

</html>