<!DOCTYPE html>
<html lang="en">

<head>
    <link href="/css/styles-register.css" rel="stylesheet">
    <%- include('../partials/head') %>
</head>

<body>
    <%- include('../partials/header') %>
        <main class="conteiner">
            <form action="/user/new" class="myForm" enctype="multipart/form-data" method="post">

                <div class="contact">
                    <article>
                        <h2>Nuevo Usuario</h2>
                    </article>
                    <article>
                        <label for="name">Nombre</label>
                        <input type="text" id="name" name="name" placeholder="Ingrese su nombre" required
                            maxlength="20">
                    </article>
                    <article>
                        <label for="apellido">Apellido</label>
                        <input type="text" id="lastname" name="lastname" placeholder="Ingrese su apellido" required
                            maxlength="20">
                    </article>
                    <article>
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" placeholder="Ingrese su email" required
                            maxlength="30">

                    </article>

                    <article>
                        <label for="name">Password</label>
                        <input type="password" id="password" name="password" placeholder="Ingrese su Password" required
                            maxlength="20">
                    </article>
                    <article>
                        <legend>Categor√≠a</legend>
                        <select name="type" id="type">
                            <option value="1">Usuario</option>
                            <option value="2">Vendedor</option>
                        </select>
                    </article>
                    <article>
                        <label for="avatar">Avatar</label>
                        <input type="file" name="avatar" id="avatar" accept=".jpg, .png">
                    </article>
                    
                    <article>
                        <button type="submit">Guardar</button>
                        <button type="reset">Limpiar</button>
                    </article>
                </div>
            </form>
        </main>
        <%- include('../partials/footer')%>
</body>

</html>