<!DOCTYPE html>
<html lang="en">
    <head> 
        <link href="/css/styles-login.css" rel="stylesheet">
        <%- include('../partials/head') %>
    </head>
    <body>
        <%- include('../partials/header') %>
    <main>
        <form action="/user/login" class="create-form" method="post">
            <article class="control-article">
                <div class="control-form">
                    <label for="email">email</label>
                    <i class="login__icon fa-thin fa-at"></i>
                    <input type="email" id="email" name="email" placeholder="Ingrese su email">  
                    <span class="error"></span>
                    <% if (locals.errors && errors.email) { %>
                        <div class="text-danger">
                            <%= errors.email.msg %>
                        </div> 
                <% } %>
                </div>
                <div class="control-form">
                    <label for="password">Contrase침a</label>
                    <i class="login__icon fas fa-lock"></i>
                    <input type="password" id="password" name="password" placeholder="Ingrese su contrase침a"> 
                    <span class="error"></span>
                    <% if (locals.errors && errors.password) { %>
                        <div class="text-danger">
                            <%= errors.password.msg %>
                        </div> 
                <% } %>
                </div>
                
                <div class="control-form-recordar">
                    <label for="password">
                        <input type="checkbox" name="recordarme" id="recordarme">
                        Recordarme</label>                      
                </div>
                <div class="control-form">
                    <nav>
                        <a href="#">Olvid칩 su contrase침a</a>
                        <a href="/user/register">Registrarse</a>
                    </nav>
                </div>
            </article>
            <article class="control-article">
                <button type="submit" class="button-save">Ingresar</button>
            </article>
        </form>
    </main>
    <%- include('../partials/footer')%>
    <script src ="/js/validatorLogin.js"></script>
</body>
</html>