<html lang="en">
<head>
    <%- include('../partials/head') %>
    <link rel="stylesheet" href="/css/styles-formularioProducto.css">
</head>
<body>
    <%- include('../partials/header') %>       
        <h1><p>CARGA-EDICIóN DE PRODUCTOS</p></h1>
    <main class="Formulario">
        <form class="Formulario-de-edicion">
            <fieldset>
                <legend>Nombre del Producto</legend>
                <p><input type="text" name="name" id="name" ></p>
            </fieldset>
            <fieldset>
                <legend>Descripción</legend>
                <p><input type="text" name=" description" id=" description" ></p>
            </fieldset>
            <fieldset>
                <legend>Precio</legend>
                <input type="number" name="price" id="price" >
            </fieldset>
            <fieldset>
                <label for="FormaDePago">Forma de Pagos</label>
            </fieldset>
            <div class="checkbox">
                <label for="checkbox">Efectivo</label>
                <input type="radio" name="MedioPago" value="Efectivo" checked>
                <label for="checkbox">Mercadopago</label>
                <input type="radio" name="MedioPago" value="MercadoPago">
                <label for="checkbox">Tarjeta De Credito/Debito</label>
                <input type="radio" name="MedioPago" value="Tarjeta De Credito/Debito">
            </div>
            <fieldset>
                <p class="imagenP">imagenes productos</p>
                <input type="file" name="image" accept=".jpg" multiple>
            </fieldset>
            <fieldset>
            <legend>Categoria</legend>
            <input type="text" name="category" id="category" >
            </fieldset>
            <fieldset>Descripcion Detallada</fieldset>
            <textarea name="comentario" id="comentario" rows="5" cols="40">Datos y detalles como color,tamaño,talles,etc..</textarea>
            <div class="reset"><input type="reset"></div>
            <div class="enviar"><input type="submit"></div>
        </form>
    </main>
    <%- include('../partials/footer')%>
</body>
</html>