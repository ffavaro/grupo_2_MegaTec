<html lang="en">

<head>
    <%- include('../partials/head') %>
        <link rel="stylesheet" href="/css/styles-create-product.css">
</head>

<body>
    <%- include('../partials/header') %>
        <main class="Formulario">
            <form method="POST" enctype="multipart/form-data" accion="/product/edit/<%= product.id %>?_method=PUT" class="Formulario-de-edicion">
                <h1>
                    <p>EDICIÓN DE PRODUCTOS</p>
                </h1>
                <fieldset>
                    <legend>Nombre del Producto</legend>
                    <p><input type="text" name="name" id="name" value="<%= product.name %>">
                        <% if (locals.errors && errors.name) { %>
                            <div class="text-danger">
                                <%= errors.name.msg %>
                            </div>
                            <% } %>
                        </p>
                </fieldset>
                <fieldset>
                    <legend>Descripción</legend>
                    <p><input type="text" name="description" id="description" value="<%= product.description %>">
                        <% if (locals.errors && errors.description) { %>
                            <div class="text-danger">
                                <%= errors.description.msg %>
                            </div>
                            <% } %>
                        </p>
                </fieldset>
                <fieldset>
                    <legend>Precio</legend>
                    <input type="number" name="price" id="price" value="<%= product.price %>">
                </fieldset>
                <fieldset>
                    <legend>Descuento</legend>
                    <input type="number" name="discount" id="discount" value="<%= product.discount %>">
                </fieldset>
                <fieldset>
                    <legend>Stok</legend>
                    <input type="number" name="stock" id="stock" placeholder="10">
                </fieldset>
                <fieldset>
                    <legend>Categoría</legend>
                    <select name="category_id" id="category_id">
                        <option value="1">En Oferta</option>
                        <option value="2">Nuevo</option>
                    </select>
                </fieldset>
                <fieldset>
                    <legend>Marca</legend>
                    <select name="brand_id" id="brand_id">
                        <option value="1">AMD</option>
                        <option value="2">INTEL</option>
                    </select>
                </fieldset>
                <fieldset>
                    <legend>Imagen del Producto</legend>
                    <img src="/images/<%= product.image %> " alt="<%= product.name %> "> </img>
                    <input type="file" name="image" id="image" accept=".jpg" required multiple>
                    <% if (locals.errors && errors.image) { %>
                        <div class="text-danger">
                            <%= errors.image.msg %>
                        </div>
                        <% } %>
                </fieldset>
                <div class="botones">
                    <div class="reset">
                        <button type="reset">Limpiar</button>
                    </div>
                    <div class="enviar">
                        <button type="submit">Actualizar</button> 
                    </div>
                </div>
            </form>
        </main>
        <%- include('../partials/footer')%>
</body>

</html>