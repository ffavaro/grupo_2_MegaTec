<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../partials/head')%>
    <link href="/css/styles-productDetail.css" rel="stylesheet">
</head>
    <body>
        <%- include('../partials/header')%>
    <main>
        <section>
            <article>
                <div class="product">
                    <h3 class="descripciones"> <%= product.name %> </h3>
                    <img src="/images/product/<%= product.image %> " alt="<%= product.name %> "> </img>
                </div>
            </article>
        </section>
        <section>
            <article>
                <div>
                    <h2>Especificaciones</h2>
                    <h3 class="descripciones"> <%= product.description%></h3>
                    <br>
                    <h2>Precio</h2>
                    <p class="precios">$<%= product.price%></p>
                    <h2>Descuento</h2>
                    <p class="descuentos"><%= product.discount%> %</p>
                </div>
                <div class="buttons">
                    <div>
                    <button class="button-save">
                        Comprar
                    </button>
                </div>
                    <div><form  method="get" action="/product/edit/<%= product.id %>">
                        <button type="submit" class="button-edit">Editar</button>
                    </form>
                </div>
                <div><form  method="post" action="/product/delete/<%= product.id %>?_method=DELETE">
                        <button type="submit" class="button-delete">Eliminar</button>
                    </form>
                </div>
                </div>
            </article>
        </section>
    </main>
    <%- include('../partials/footer')%>
</body>

</html>